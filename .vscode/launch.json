{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter (Debug)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "--debug"
            ],
            "cwd": "${workspaceFolder}",
            "console": "debugConsole"
        },
        {
            "name": "Flutter (Release)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "--release"
            ],
            "cwd": "${workspaceFolder}",
            "console": "debugConsole"
        },
        {
            "name": "Flutter (Profile)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "--profile"
            ],
            "cwd": "${workspaceFolder}",
            "console": "debugConsole"
        },
        {
            "name": "Flutter Web (Debug)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "web-server",
                "--web-port",
                "3000"
            ],
            "cwd": "${workspaceFolder}",
            "console": "debugConsole"
        },
        {
            "name": "Flutter Test (All)",
            "type": "dart",
            "request": "launch",
            "program": "test/",
            "args": [
                "--coverage"
            ],
            "cwd": "${workspaceFolder}",
            "console": "debugConsole"
        }
    ]
}